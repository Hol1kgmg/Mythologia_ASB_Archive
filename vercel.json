{
  "version": 2,
  "framework": null,
  "builds": [
    {
      "src": "webapp/backend/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/webapp/backend/src/index.ts"
    },
    {
      "src": "/debug/(.*)",
      "dest": "/webapp/backend/src/index.ts"
    },
    {
      "src": "/health",
      "dest": "/webapp/backend/src/index.ts"
    },
    {
      "src": "/",
      "dest": "/index.html"
    }
  ],
  "env": {
    "DATABASE_TYPE": "postgresql",
    "ENVIRONMENT": "production"
  },
  "installCommand": "cd webapp && npm install --workspace=@mythologia/shared && npm install --workspace=@mythologia/backend",
  "buildCommand": "cd webapp && npm run build --workspace=@mythologia/shared && npm run build --workspace=@mythologia/backend"
}