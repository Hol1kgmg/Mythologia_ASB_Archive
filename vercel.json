{
  "version": 2,
  "framework": "nextjs",
  "builds": [
    {
      "src": "webapp/frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "$RAILWAY_API_URL",
    "ENVIRONMENT": "production"
  },
  "installCommand": "npm install",
  "buildCommand": "npm run build:frontend",
  "outputDirectory": "frontend/.next"
}