{
  "name": "@mythologia-asb/backend",
  "type": "module",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "railway:build": "npm run build",
    "railway:start": "npm run start",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/migrate.ts",
    "db:migrate:local": "dotenv -e .env.local -- tsx src/migrate.ts",
    "db:migrate:docker": "docker-compose run --rm backend npm run db:migrate:local",
    "db:push": "drizzle-kit push",
    "db:push:local": "dotenv -e .env.local -- drizzle-kit push",
    "db:push:docker": "docker-compose run --rm backend npm run db:push:local",
    "db:test": "tsx src/test-connection.ts",
    "db:test:local": "dotenv -e .env.local -- tsx src/test-connection.ts",
    "db:test:docker": "docker-compose run --rm backend npm run db:test:local"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.4",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.2",
    "hono": "^4.7.11",
    "jose": "^6.0.11",
    "postgres": "^3.4.7",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "@types/pg": "^8.15.4",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.1",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
