# PostgreSQL接続設定
# ローカル開発用のデフォルト値を使用するか、本番環境の値を設定してください
DATABASE_URL=postgresql://user:password@localhost:5432/mythologia_asb

# JWT秘密鍵（32文字以上の強力なランダム文字列）
# 本番環境では必ず変更してください
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-chars

# アプリケーション設定
NODE_ENV=development
PORT=8787

# Cloudflare設定（Cloudflare Workers環境のみ）
# CLOUDFLARE_ACCOUNT_ID=your-account-id
# CLOUDFLARE_API_TOKEN=your-api-token

# Vercel設定（Vercel環境のみ）
# VERCEL_ENV=development
# VERCEL_URL=

# ログレベル（development | production）
LOG_LEVEL=development

# CORS設定（カンマ区切りで複数指定可能）
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8787

# セッション設定
SESSION_EXPIRE_HOURS=168  # 7日間
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# データベースプール設定（PostgreSQL）
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT_SECONDS=30

# キャッシュ設定（秒）
CACHE_TTL_CARDS=86400      # 24時間
CACHE_TTL_SETS=3600        # 1時間
CACHE_TTL_SEARCH=300       # 5分