{
  "version": 2,
  "framework": "nextjs",
  "env": {
    "NEXT_PUBLIC_API_URL": "$RAILWAY_API_URL",
    "ENVIRONMENT": "production"
  },
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "functions": {
    "app/**/*.tsx": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "$RAILWAY_API_URL/api/:path*"
    },
    {
      "source": "/health",
      "destination": "$RAILWAY_API_URL/health"
    }
  ]
}