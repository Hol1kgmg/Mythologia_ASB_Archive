# Application Level Authentication
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_ID=mythologia-frontend

# Server-side secrets (DO NOT expose to client)
JWT_SECRET=your-jwt-secret-key-here
HMAC_SECRET=your-hmac-secret-key-here

# ステージング環境フラグ（開発・ステージング環境用）
# true: 認証テストページ有効、エラー詳細表示
# false または未設定: 認証テストページ無効、エラー詳細非表示
NEXT_PUBLIC_IS_STAGING=true

# Production/Staging values (set in Vercel dashboard)
# NEXT_PUBLIC_API_URL=https://your-railway-app.railway.app
# JWT_SECRET=production-jwt-secret
# HMAC_SECRET=production-hmac-secret
# NEXT_PUBLIC_IS_STAGING=true  # ステージング環境のみ