{
  "name": "mythologia-admirals-ship-bridge",
  "version": "0.1.0",
  "description": "神託のメソロギア非公式カード情報データベース・デッキ構築Webアプリケーション",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/backend",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=apps/backend",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "test": "npm run test --workspaces",
    "test:backend": "npm run test --workspace=apps/backend",
    "test:frontend": "npm run test --workspace=apps/frontend",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "install-all": "npm install && npm install --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mythologia",
    "card-game",
    "deck-builder",
    "unofficial",
    "web-app",
    "monorepo"
  ],
  "author": "Community Contributors",
  "license": "MIT"
}